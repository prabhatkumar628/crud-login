{{>header}}
<title>Register</title>
{{!-- {{>navbar}} --}}
<div class=" bg-login container-fluid pt-3 pb-5">
    <div class="row">
        <div class="col-12 d-flex justify-content-center align-items-center">
            <div style="max-width: 60px !important;" class="login-icon">
                <img class="w-auto h-auto"
                    src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQOtu74pEiq7ofeQeTsco0migV16zZoBwSlGg&s"
                    alt="">
            </div>
        </div>
        <div class="col-12 d-flex justify-content-center align-items-center">
            {{#if errorMessage.user}}
            <div class="d-flex justify-content-end align-items-end">
                <p class="text-danger fw-light fs-3 ms-3 text-center mb-0">{{errorMessage.user}}</p>
            </div>
            {{/if}}
        </div>
        <div class="col-12  d-flex justify-content-center align-items-center">
            <div style="min-width: max-content !important;" class="d-flex justify-content-end align-items-end">
                <p style="color: #8193b2;" class="form-text fw-light fs-5 ms-3 text-center mb-0">Already have an
                    account?</p>
            </div>
            <p style="min-width: max-content !important;" class="text-light form-text ms-3 text-center fs-5 p-0 m-0"
                for=""><span><a class="text-light nav-link" href="/users/login">Sign in</a></span></p>
        </div>
    </div>

    <div class="register-box d-flex  flex-column justify-content-between align-items-center m-auto">
        <h3 class="text-light fw-light mt-2 mb-3">Create a new account</h3>
        <form class="register-form-box" action="/users/register" enctype="multipart/form-data" method="post">
            <div class="row">
                <div class="col-md-6 d-flex flex-column">
                    <label class="text-light" for="">Full Name*</label>
                    <input value="{{data.fullName}}"
                        class="form-control border-3 {{#if errorMessage.fullName}} border-danger {{/if}}" type="text"
                        name="fullName" placeholder="Full Name">
                    {{#if errorMessage.fullName}}
                    <p class="text-danger">{{errorMessage.fullName}}</p>
                    {{/if}}
                </div>

                <div class="col-md-6 d-flex flex-column">
                    <label class="text-light" for="">Email*</label>
                    <input class="form-control border-3 {{#if errorMessage.email}} border-danger {{/if}}"
                        value="{{data.email}}" type="email" name="email" placeholder="Email">
                    {{#if errorMessage.email}}
                    <p class="text-danger">{{errorMessage.email}}</p>
                    {{/if}}
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6 d-flex flex-column">
                    <label class="text-light" for="">Username*</label>
                    <input class="form-control border-3 {{#if errorMessage.email}} border-danger {{/if}}"
                        value="{{data.username}}" type="text" name="username" placeholder="username">
                    {{#if errorMessage.username}}
                    <p class="text-danger">{{errorMessage.username}}</p>
                    {{/if}}
                </div>

                <div class="col-md-6 d-flex flex-column">
                    <label class="text-light" for="">Phone*</label>
                    <input class="form-control border-3 {{#if errorMessage.phone}} border-danger {{/if}}"
                        value="{{data.phone}}" type="text" name="phone" placeholder="Phone no">
                    {{#if errorMessage.phone}}
                    <p class="text-danger">{{errorMessage.phone}}</p>
                    {{/if}}
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6 d-flex flex-column">
                    <label class="text-light" for="">Password*</label>
                    <input class="form-control border-3 {{#if errorMessage.password}} border-danger {{/if}}"
                        value="{{data.password}}" type="text" name="password" placeholder="Password">
                    {{#if errorMessage.password}}
                    <p class="text-danger">{{errorMessage.password}}</p>
                    {{/if}}
                </div>

                <div class="col-md-6 d-flex flex-column">
                    <label class="text-light" for="">Confirm Password*</label>
                    <input class="form-control border-3 {{#if errorMessage.confirmPassword}} border-danger {{/if}}"
                        value="{{data.confirmPassword}}" type="text" name="confirmPassword"
                        placeholder="Confirm Password">
                    {{#if errorMessage.confirmPassword}}
                    <p class="text-danger">{{errorMessage.confirmPassword}}</p>
                    {{/if}}
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-2"></div>
                <div class="col-md-8 d-flex flex-column">
                    <label class="text-light" for="">Profile Picture</label>
                    <input class="form-control border-3 {{#if errorMessage.avatar}} border-danger {{/if}}" type="file"
                        value="{{data.avatar}}" name="avatar" placeholder="Profile Picture">
                    {{#if errorMessage.avatar}}
                    <p class="text-danger">{{errorMessage.avatar}}</p>
                    {{/if}}
                </div>
                <div class="col-md-2"></div>
            </div>

            <div class="row mt-2">
                <div class="col-md-3"></div>
                <div class="col-md-6">
                    <button class=" btn btn-light bord w-100 ms-auto" type="submit">Signup</button>
                </div>
                <div class="col-md-3"></div>
            </div>
        </form>

        <div class="register-form-box mt-3">
            <p class="text-light text-center p-0 m-0" for=""><span><a class="text-light nav-link"
                        href="/users/login">Already have an account?</a></span></p>
        </div>

        {{#if errorMessage.registerError}}
        <div class="mt-3">
            <p class="text-danger text-center">{{errorMessage.registerError}}</p>
        </div>
        {{/if}}
    </div>
</div>
</body>

</html>